<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TinyApp</title>
  </head>

  <body>
  <% include ./partials/_header %>
   <% if(user) { %>
    <h3>Your URLs: </h3>
      <h2>
        <ul>
          <% for(var url in urls) { %>
            <li><%=url%> <%= urls[url].website%></li>
              <form method="POST" action="/urls/<%= url %>/delete">
              <a href='/urls/<%= url %>'>Edit</a>
              <button> Delete </button>
            </form>
          <% } %>
        </ul>
      </h2>
    <h1>
        <a href="/urls/new"><button> Add your URL</button></a>
      </h1>
  <% } else { %>
    <h3> Please Login </h3>
      <a href="/login"><button>LOGIN</button></a>
    <% } %>
  </body>

</html>